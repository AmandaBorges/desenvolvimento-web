<html lang="pt">
    include includes/head.pug
    <body>
      <h1 style="text-align: center; margin-top:50px;">Cadastrar Produto</h1>
      <div class="container marketing">
        <form method="post" action="/admin/products/create">
          <div class="form-group form-row">
            <label for="category">Categoria</label>
            <input type="text" class="form-control" id="category" name="category" placeholder="Categoria">
          </div>
          <div class="form-group form-row">
            <label for="slug">Slug</label>
            <input type="text" class="form-control" id="slug" name="slug" placeholder="Slug">
          </div>
          <div class="form-group form-row">
            <label for="title">Título</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Título">
          </div>
          <div class="form-group form-row">
            <label for="material">Material</label>
            <input type="text" class="form-control" id="material" name="material" placeholder="Material">
          </div>
          <div class="form-group form-row">
            <label for="size">Tamanho</label>
            <input type="text" class="form-control" id="size" name="size" placeholder="Temanho">
          </div>
          <div class="form-group form-row">
            <label for="packing">Embalagem</label>
            <input type="text" class="form-control" id="packing" name="packing" placeholder="Embalagem">
          </div>
          <div class="form-group form-row">
            <label for="value">Valor</label>
            <input type="text" class="form-control" id="value" name="value" placeholder="Valor">
          </div>
          <div class="form-group form-row">
            <label for="is_highlight">Destaque</label>
            <input class="form-check-input position-static" type="checkbox" id="is_highlight" name="is_highlight" aria-label="Destaque">
          </div>
          <div class="form-group form-row">
            <label for="image">Imagem</label>
            <input type="text" class="form-control" id="image" name="image" placeholder="Link Imagem">
          </div>
          <div class="form-group form-row">
            <button type="submit" class="btn btn-primary" id="btn-save-product">Salvar</button>
          </div>
        </form>
      </div>+
    </body>
</html>